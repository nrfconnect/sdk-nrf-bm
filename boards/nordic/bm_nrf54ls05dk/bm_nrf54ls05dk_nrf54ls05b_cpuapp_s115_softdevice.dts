/dts-v1/;

#include <nordic/nrf54ls05b_cpuapp.dtsi>
#include "bm_nrf54ls05dk_nrf54ls05b_cpuapp_common.dtsi"

/ {
	chosen {
		zephyr,flash = &cpuapp_rram;
		zephyr,code-partition = &slot0_partition;
		zephyr,sram = &app_ram;
	};
};

&cpuapp_rram {
	status = "okay";

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		slot0_partition: partition@0 {
			label = "slot0";
			reg = <0x00000000 DT_SIZE_K(397)>;
		};

		storage_partition: partition@63400 {
			compatible = "fixed-subpartitions";
			label = "storage";
			reg = <0x00063400 DT_SIZE_K(8)>;
			ranges = <0x0 0x63400 DT_SIZE_K(8)>;
			#address-cells = <1>;
			#size-cells = <1>;

			peer_manager_partition: partition@0 {
				label = "peer_manager";
				reg = <0x00000000 DT_SIZE_K(4)>;
			};

			storage0_partition: partition@1000 {
				label = "storage0";
				reg = <0x00001000 DT_SIZE_K(4)>;
			};
		};

		softdevice_partition: partition@65400 {
			label = "softdevice";
			reg = <0x00065400 DT_SIZE_K(102)>;
		};
		/* Area from 0x7ec00 to end of nvm (1 kB) is unused
		 * due to placement of SD to fit with DFU
		 */
	};
};

&cpuapp_sram {
	status = "okay";

	softdevice_static_ram: sram@0 {
		label = "softdevice_static_ram";
		reg = <0x0 0x1080>;
	};

	softdevice_dynamic_ram: sram@1080 {
		label = "softdevice_dynamic_ram";
		reg = <0x1080 (DT_SIZE_K(12) + 0x300)>;
	};

	app_ram: sram@4380 {
		label = "app_ram";
		reg = <0x4380 DT_SIZE_K(79)>;
	};
};
