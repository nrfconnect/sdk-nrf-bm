menuconfig LITE_BUTTONS
	bool "Buttons library"
	depends on NRFX_GPIOTE0
	depends on LITE_TIMER
	help
	  A library to manage buttons.

if LITE_BUTTONS

config LITE_BUTTONS_NUM_PINS
	int "Number of available pins for buttons"
	range 1 32 if SOC_SERIES_NRF52X
	range 1 24 if SOC_SERIES_NRF54LX
	default 32 if SOC_SERIES_NRF52X
	default 24 if SOC_SERIES_NRF54LX

module=LITE_BUTTONS
module-dep=LOG
module-str=Lite Buttons
source "${ZEPHYR_BASE}/subsys/logging/Kconfig.template.log_config"

endif
