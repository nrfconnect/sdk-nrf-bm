menu "BLE CGMS sample"

config SAMPLE_QWR_MEM_BUFF_SIZE
	int "QWR memory buffer size"
	default 512

menu "Glucose measurement simulation"

endmenu # Glucose measurement simulation

config SAMPLE_GLUCOSE_MEAS_INTERVAL
	int "Fastest possible communication interval"
	default 1

config SAMPLE_GLUCOSE_CONCENTRATION_INC
	int "Glucose concentration increment on button press"
	default 10
	help
	   How much the simulated glucose concentration will increase upon a button press.

config SAMPLE_GLUCOSE_CONCENTRATION_DEC
	int "Glucose concentration increment on button press"
	default 5
	help
	   How much the simulated glucose concentration will decrease upon a button press.

config SAMPLE_GLUCOSE_CONCENTRATION_MAX
	int "Maximum glucose concentration (mg/dL)"
	default 800

config SAMPLE_GLUCOSE_CONCENTRATION_MIN
	int "Minimum glucose concentration (mg/dL)"
	default 5

endmenu # "BLE CGMS sample"

module=SAMPLE_BLE_CGMS
module-str=BLE CGMS Sample
source "$(ZEPHYR_BASE)/subsys/logging/Kconfig.template.log_config"

source "Kconfig.zephyr"
