menu "BLE NUS sample"

config SAMPLE_NUS_UART_IRQ_PRIO
	int "NUS UART IRQ priority"
	default 3

config SAMPLE_NUS_UART_PARITY
	bool "BLE UART use parity"

config SAMPLE_NUS_LPUARTE
	bool "NUS Low Power UARTE"

if SAMPLE_NUS_LPUARTE

endif # SAMPLE_NUS_LPUARTE

config SAMPLE_NUS_UART_HWFC
	bool "NUS UART use HWFC"
	depends on !SAMPLE_NUS_LPUARTE
	default y

config SAMPLE_NUS_UART_RX_BUF_SIZE
	int "NUS UART receive buffer size"
	default 128 if SAMPLE_NUS_LPUARTE
	default 1
	help
	  UART RX is double buffered, so the actual buffer will be twice as large.

module=SAMPLE_BLE_NUS
module-str=BLE NUS Sample
source "$(ZEPHYR_BASE)/subsys/logging/Kconfig.template.log_config"

endmenu # "BLE NUS sample"

source "Kconfig.zephyr"
