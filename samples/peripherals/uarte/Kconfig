menu "UARTE sample"

config UARTE_DATA_LEN_MAX
	int "maximum UARTE data length"
	default 128
	help
	  Defines the maximum length the application can store in the receive buffer.

config UARTE_HWFC
	bool "UARTE HWFC"
	help
	  Enable hardware flow control on the UARTE peripheral used by the application.

config UARTE_PARITY
	bool "UARTE parity"
	help
	  Enable parity on the UARTE peripheral used by the application.

config UARTE_IRQ_PRIO
	int "UARTE IRQ priority"
	default 5

endmenu # "UARTE sample"

source "Kconfig.zephyr"
