menu "PPI sample"

config SAMPLE_TIMER_IRQ_PRIO
	int "Timer IRQ priority"
	default 5

config SAMPLE_LED_BLINK_INTERVAL_MS
	int "LED blink interval in milliseconds"
	default 500
	help
	   This is the time the LED remains in an on and off state.

module=SAMPLE_PPI
module-str=PPI Sample
source "$(ZEPHYR_BASE)/subsys/logging/Kconfig.template.log_config"

endmenu # "PPI sample"

source "Kconfig.zephyr"
