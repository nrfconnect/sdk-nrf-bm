menu "Timer sample"

config PERIODIC_TIMER_INTERVAL_MS
	int "Timeout interval of periodic timer"
	default 500

config HELLO_TIMER_DURATION_MS
	int "First timeout duration of oneshot timer"
	default 1000

config WORLD_TIMER_DURATION_MS
	int "Second timeout duration of oneshot timer"
	default 2000

config BYE_TIMER_DURATION_MS
	int "Third timeout duration of oneshot timer"
	default 4000

module=TIMER_SAMPLE
module-dep=LOG
module-str=Timer Sample
source "${ZEPHYR_BASE}/subsys/logging/Kconfig.template.log_config"

endmenu # "Timer sample"

source "Kconfig.zephyr"
