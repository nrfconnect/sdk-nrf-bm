menu "SoftDevice"

config SOFTDEVICE
	bool
	depends on ZERO_LATENCY_IRQS
	depends on !CLOCK_CONTROL

config SOFTDEVICE_PERIPHERAL
	bool
config SOFTDEVICE_CENTRAL
	bool

choice SOFTDEVICE_CHOICE
	prompt "SoftDevice"
	optional

config SOFTDEVICE_S140
	bool "S140"
	select SOFTDEVICE
	select SOFTDEVICE_PERIPHERAL
	select SOFTDEVICE_CENTRAL

endchoice

config SOFTDEVICE_STRING_TABLES
	bool "Compile tables for stringified events and errors"

endmenu
