config BM_NFC_NDEF
	bool "NDEF libraries for Bare Metal"
	help
	  Enable NFC Data Exchange Format libraries

config BM_NFC_NDEF_PAYLOAD_TYPE_COMMON
	bool "Standard NDEF Record Type definitions for Bare Metal"
	help
	  Enable NFC Data Exchange Format Record Type definitions

if BM_NFC_NDEF

config BM_NFC_NDEF_MSG
	bool "NDEF Message generator library for Bare Metal"

config BM_NFC_NDEF_RECORD
	bool "NDEF Record generator library for Bare Metal"

config BM_NFC_NDEF_LE_OOB_REC
	bool "NDEF LE OOB record generator library for Bare Metal"
	select BM_NFC_NDEF_PAYLOAD_TYPE_COMMON
	depends on SOFTDEVICE

config BM_NFC_NDEF_TEXT_RECORD
	bool "Encoding data for a text record for NFC Tag for Bare Metal"

config BM_NFC_NDEF_URI_MSG
	bool "NDEF URI messages generator library for Bare Metal"

config BM_NFC_NDEF_URI_REC
	bool "NDEF URI record generator library for Bare Metal"

config BM_NFC_NDEF_CH_MSG
	bool "NDEF pairing Connection Handover message generator library for Bare Metal"
	select BM_NFC_NDEF_CH_REC
	help
	  Enable NDEF Connection Handover message generator library

config BM_NFC_NDEF_CH_REC
	bool "NDEF Connection Handover records generator library for Bare Metal"
	help
	  Enable NDEF Connection Handover records generator library

config BM_NFC_NDEF_LAUNCHAPP_MSG
	bool "NDEF Launch App message library for Bare Metal"
	select BM_NFC_NDEF_LAUNCHAPP_REC
	help
	  Enable NDEF Launch App message generator library

config BM_NFC_NDEF_LAUNCHAPP_REC
	bool "NDEF Launch App records for Bare Metal"
	help
	  Enable NDEF Launch App records library

endif # BM_NFC_NDEF

if BM_NFC_NDEF_CH_MSG

config BM_NFC_NDEF_CH_MAJOR_VERSION
	int "Connection Handover major version"
	default 1
	help
	  The major version of the Connection Handover specification.

config BM_NFC_NDEF_CH_MINOR_VERSION
	int "Connection Handover minor version"
	default 5
	help
	  The minor version of the Connection Handover specification.

endif # BM_NFC_NDEF_CH_MSG
